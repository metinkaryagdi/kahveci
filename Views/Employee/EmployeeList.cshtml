@model IEnumerable<Kahveci.Models.Employee>

@{
    Layout = "_EmployeeLayout";  // Layout belirle
}

<h1>Çalışan Listesi</h1>


<table class="table">
    <thead>
        <tr>
            <th>Çalışan ID</th>
            <th>Çalışan Adı</th>
            <th>Çalışan E-posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.EmployeeEmail</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })">Düzenle</a> |
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
