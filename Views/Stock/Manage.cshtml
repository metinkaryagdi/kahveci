@model IEnumerable<Kahveci.Models.Ingredient>

@{
    Layout = "_Layout";
}

<h2>Stok Yönetimi</h2>

<!-- Yeni Malzeme Ekleme Formu -->
<h3>Yeni Malzeme Ekle</h3>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Malzeme Adı</label>
        <input type="text" id="Name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="StockQuantity">Stok Miktarı</label>
        <input type="number" id="StockQuantity" name="StockQuantity" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

<br>

<!-- Mevcut Malzemelerin Listesi -->
<h3>Mevcut Malzemeler</h3>
<table class="table">
    <thead>
        <tr>
            <th>Malzeme Adı</th>
            <th>Mevcut Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model)
        {
            <tr>
                <td>@ingredient.Name</td>
                <td>@ingredient.StockQuantity</td>
                <td>
                    <a href="@Url.Action("UpdateStock", "Stock", new { id = ingredient.IngredientId })">Stok Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Çalışan Yönetimine Geri Dön</a>
</div>
